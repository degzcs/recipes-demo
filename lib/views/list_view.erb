<% @recipes.each_slice(2) do |group| %>
  <div class="row">
    <% group.each do |recipe| %>
      <div class="col-md-6 space">
        <div class="card">
          <a href=<%= "recipes/#{recipe.id}"%> >
            <img src=<%=recipe.image_url%> class="card-image-top img-size">
            <div class="card-body">
              <h5 class="card-title"><%= recipe.title %></h5>
              <p class="card-text"><p>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
